{
  "commitizen": {
    "name": "cz_conventional_commits",
    "tag_format": "$version",
    "version_scheme": "semver",
    "version": "0.10.0",
    "update_changelog_on_bump": true,
    "major_version_zero": true,
    "customize": {
      "bump_pattern": "^(build|feat|fix|perf)",
      "bump_map": {
        "build": "MAJOR",
        "feat": "MINOR",
        "fix": "PATCH",
        "perf": "PATCH"
      }
    }
  }
}